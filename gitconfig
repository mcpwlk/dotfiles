[core]
	editor = vim
	excludesfile = ~/.gitignore-global
[diff]
	tool = vimdiff
[push]
	default = nothing
[merge]
	defaultToUpstream = true
[alias]
	ff = merge --ff-only
	st = status
	sti = status --ignored
	diffc = diff --cached
	tree = log --oneline --graph --decorate
[include]
	path = ~/.gitconfig-user
